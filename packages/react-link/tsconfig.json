{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"],
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "types": ["jest", "custom-global"]
  },
  "include": ["src"]
}
